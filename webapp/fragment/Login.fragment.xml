<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:semantic="sap.m.semantic" xmlns:f="sap.ui.layout.form">
	<VBox class="Logo">
		<Label text="TOYOTA SERVICE"></Label>
	</VBox>
	<f:SimpleForm editable="true" id="idSimpleFormLogin">
		<f:content>
			<VBox>
				<VBox>
					<Label class="loginLabels" text="User Name"></Label>
					<Input class="loginInputs" value="{oDataGlobalModel>/userData/userName}" type="Text"></Input>
				</VBox>
				<VBox>
					<Label class="loginLabels" text="Password"></Label>
					<Input class="loginInputs" value="{oDataGlobalModel>/userData/passsword}" type="Password"></Input>
				</VBox>
				<VBox class="SignInbox">
					<Button class="siginButton" text="Login" press="onLoginPress"></Button>
				</VBox>
				<HBox class="SignInhbox">
					<Link class="LoginLink" text="Forgot Password?" press="OnLoginPress"/>
				</HBox>
				<HBox class="SignInhbox1">
					<Text class="loginTextField" text="I am new User , "></Text>
					<Link class="LoginLink1" text=" SignUp" press="OnSignUpPress"/>
				</HBox>
			</VBox>
		</f:content>
	</f:SimpleForm >
</core:FragmentDefinition>