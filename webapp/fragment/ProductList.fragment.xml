<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns="sap.m">
	<CustomListItem class="carList" type="Active" press="onProductTilePress">
	
	<VBox alignItems="Center" visible="{path: 'oDataGlobalModel>isSelected', formatter:'inc.demo.Toyota.util.formatter.fnCarSelected'}"
		class="productBox sapUiTinyMarginBottom" renderType="Bare">
		<Label text="{oDataGlobalModel>productName}" class="labelStyle"/>
		<Image src="{oDataGlobalModel>src}" class="sapUiSmallMarginTop"/>
		<Label text="{oDataGlobalModel>productPrice}" class="sapUiTinyMarginTop labelStyle"/>
		
	</VBox>
	
	</CustomListItem>

</core:FragmentDefinition>